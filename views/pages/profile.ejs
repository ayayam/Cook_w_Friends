<%- include('../partials/head') -%>
<%# include('../partials/navbarRegistered') #%>
<body>
    <header class="header">
        <a class="logo-container" href="/user/profile/">
            <img class="logo" src="/image/LogoIcon.png" alt="Cook with Friends logo">
            <p class="header-title-link header-title" href="/user/profile/">Cook with Friends</p> 
        </a>
        
        <nav class="navbar-user">
            <a class="navlinks" href="/user/<%= users.id %>">Profile</a>
            <a class="navlinks" href="/user/:_id/cookbook">Cookbook</a>
            <a class="navlinks" href="/user/friends/">Friends</a>
            <a class="navlinks" href="/user/shopping-list/">Shopping List</a>
            <a class="navlinks" href="/search">Search</a>
            <a class="navlinks" href="/logout">Logout</a>
        </nav>
        <section class="hamburger-dropdown">
            <a class="hamburger-menu" onclick="hamburgerDropdown()"><i class="fa-solid fa-bars"></i></a>
            <div id="hamburgerDropdown" class="hamburger-dropdown-content">
                <a class="hamburger-link" href="/user/<%= users.id %>">Profile</a>
                <a class="hamburger-link" href="/user/:_id/cookbook">Cookbook</a>
                <a class="hamburger-link" href="/user/friends/">Friends</a>
                <a class="hamburger-link" href="/user/shopping-list/">Shopping List</a>
                <a class="hamburger-link" href="/search">Search</a>
                <a class="hamburger-link" href="/logout">Logout</a>
            </div> 
        </section>
    </header>

    <main class="profile-container">

        <section class="profile-bio">

            <img class="portrait" alt="profile avatar" src="/image/Logo1.png">

            <section class="bio-text">
                <p class="name"><%= users.firstName %> <%= users.lastName %></p>
                <p class="bio"><%= users.bio %></p>
                <a class="button" href="/user/<%= users.id %>/profile-edit">
                    <button class="submit edit">Edit</button>
                </a>
            </section>
        </section>    
